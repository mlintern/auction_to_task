{
  "manifest_version": 2,

  "name": "Auction to Task",
  "version": "1.0",
  "description": "Creates a Windows Task from Auction Url",

  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },

  "permissions": [
    "tabs",
    "downloads"
  ],

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "index.html"
  }
}
